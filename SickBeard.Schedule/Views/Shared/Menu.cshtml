<div class="fill"></div>
<header>
    <div class="logo"></div>
    <div class="page-name">@ViewBag.Title</div>

    <div class="menu">
        <div>
            <div class="user-icon"></div>
            @Membership.GetUser().UserName
            <div class="drop-down">
                <a href="/Authentication/Settings">
                    <div class="settings-icon"></div>
                    Settings
                </a>
                <a href="/Authentication/Logout">
                    <div class="logout-icon"></div>
                    Logout
                </a>
            </div>
        </div>
        <a href="/Schedule" class="menu-schedule @(ViewBag.Title == "Schedule" ? "active" : "")">
            Schedule
        </a>
        <a href="/Overview" class="menu-overview @(ViewBag.Title == "Overview" ? "active" : "")">
            Overview
        </a>
        <a href="/Request" class="menu-add">
            <div class="icon"></div>
        </a>
    </div>
</header>